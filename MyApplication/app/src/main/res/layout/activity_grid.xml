<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="2"
    android:columnCount="3"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp"
        android:onClick="launchHelloActivity">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="5dp"
            app:strokeWidth="3dp"
            app:strokeColor="@color/black"
            app:shapeAppearanceOverlay="@style/circleImageView"
            android:src="@drawable/hey_svgrepo_com"
            android:onClick="launchHelloActivity"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World"
            android:textStyle="bold"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp"
        android:onClick="launchSianidaActivity">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="5dp"
            app:strokeWidth="3dp"
            app:strokeColor="@color/black"
            app:shapeAppearanceOverlay="@style/circleImageView"
            android:src="@drawable/poison_svgrepo_com"
            android:onClick="launchSianidaActivity"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sianida"
            android:textStyle="bold"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp"
        android:onClick="launchToastActivity">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="5dp"
            app:strokeWidth="3dp"
            app:strokeColor="@color/black"
            app:shapeAppearanceOverlay="@style/circleImageView"
            android:src="@drawable/text_word_count_svgrepo_com"
            android:onClick="launchToastActivity"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Count"
            android:textStyle="bold"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp"
        android:onClick="lauchTwoActivity">
    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="5dp"
        app:strokeWidth="3dp"
        app:strokeColor="@color/black"
        app:shapeAppearanceOverlay="@style/circleImageView"
        android:src="@drawable/chat"
        android:onClick="lauchTwoActivity"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Two Activity"
            android:textStyle="bold"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp"
        android:onClick="createAlarm2">
    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="5dp"
        app:strokeWidth="3dp"
        app:strokeColor="@color/black"
        app:shapeAppearanceOverlay="@style/circleImageView"
        android:src="@mipmap/alarm_round"
        android:onClick="createAlarm2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alarm"
            android:textStyle="bold"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp"
        android:onClick="showMap">
    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="5dp"
        app:strokeWidth="3dp"
        app:strokeColor="@color/black"
        app:shapeAppearanceOverlay="@style/circleImageView"
        android:src="@mipmap/maps_image_round"
        android:onClick="showMap"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maps"
            android:textStyle="bold"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp"
        android:onClick="launchFilm">
    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="5dp"
        app:strokeWidth="3dp"
        app:strokeColor="@color/black"
        app:shapeAppearanceOverlay="@style/circleImageView"
        android:src="@drawable/movie"
        android:onClick="launchFilm"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Movie"
            android:textStyle="bold"
            android:layout_gravity="center"
            />
    </LinearLayout>


</GridLayout>
